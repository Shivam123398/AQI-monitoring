# Root .env for docker-compose (copy to .env and customize)

# Postgres
POSTGRES_USER=aqi
POSTGRES_PASSWORD=aqi_password
POSTGRES_DB=aqi

# Backend security
JWT_SECRET=replace-with-long-random-secret
API_KEY_SALT=replace-with-device-key-salt

# External APIs (use demo/test keys where possible)
OPENWEATHER_API_KEY=replace-with-openweather-key
AIRVISUAL_API_KEY=

# Alerts (Email via Resend; Telegram optional; SMS via backend not enabled by default)
RESEND_API_KEY=replace-with-resend-key
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALERT_CHAT_ID=
ENABLE_TELEGRAM=true

# Backend runtime
CORS_ORIGIN=http://localhost:3000
ENABLE_JOBS=true
ENABLE_ML_PREDICTIONS=false
ML_MODEL_PATH=./models

# Redis (internal service)
REDIS_URL=redis://redis:6379

# Optional dashboard override for API URL (browser-visible)
NEXT_PUBLIC_API_URL=/api/v1
