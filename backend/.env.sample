# Database
DATABASE_URL="postgresql://user:password@hostname:5432/aeroguard?sslmode=require"
REDIS_URL="redis://:password@hostname:6379"

# API Security
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
API_KEY_SALT="your-api-key-salt"

# External APIs (for data enrichment)
OPENWEATHER_API_KEY="your-openweathermap-key"
AIRVISUAL_API_KEY="your-iqair-key-optional"

# Alerts
RESEND_API_KEY="re_your_resend_api_key"
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_ALERT_CHAT_ID="-1001234567890"

# ML Models
ML_MODEL_PATH="./models"
ENABLE_ML_PREDICTIONS=true

# App Config
NODE_ENV="development"
PORT=3000
LOG_LEVEL="info"
CORS_ORIGIN="http://localhost:3001,https://app.aeroguard.ai"